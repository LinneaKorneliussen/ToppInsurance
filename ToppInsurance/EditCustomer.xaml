<UserControl x:Class="TopInsuranceWPF.EditCustomer"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:material="http://metro.mahapps.com/winfx/xaml/iconpacks"
        xmlns:local="clr-namespace:TopInsuranceWPF"
        xmlns:vm="clr-namespace:TopInsuranceWPF.ViewModels"
        mc:Ignorable="d"
        Background="White" Height="850" Width="900">

    <UserControl.DataContext>
        <vm:EditCustomerVM/>
    </UserControl.DataContext>
    

    <Grid Margin="25,20,25,20">
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>
        <!-- Separator -->
        <Separator Height="1" Grid.Row="0" Background="#DAE2EA" Margin="0 -1 0 10"/>

        <!-- TabControl för innehåll -->
        <TabControl Name="MyTabControl" Grid.Row="1" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
            <TabControl.Resources>
                <Style TargetType="TabItem">
                    <Setter Property="Background" Value="AliceBlue"/>
                </Style>
            </TabControl.Resources>



            <TabItem Header="Privatkunder" FontWeight="Bold" Style="{StaticResource ModernTabItemStyle}">
                <StackPanel Background="White" Width="900">
                    <!-- Innehåll för den första fliken -->
                   
                    <!-- Filter Textbox -->
                    <Grid Width="400" HorizontalAlignment="Right" Margin="0 0 100 0">
                        <TextBlock Margin="20 0" VerticalAlignment="Center" Foreground="#B0B9C6" IsHitTestVisible="False" Text="Sök här ..."/>
                        <TextBox Name="textBoxFilter" Style="{StaticResource searchTextbox}" />
                        <material:PackIconMaterial Kind="Magnify" Width="15" Height="15" VerticalAlignment="Center" Margin="0 0 15 0" Foreground="#B0B9C6" HorizontalAlignment="Right"/>
                    </Grid>

                    <!-- DataGrid för att visa företagskunder -->
                    <DataGrid Name="privateDataGrid" AutoGenerateColumns="False" Height="200" ItemsSource="{Binding Pcustomers}">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Namn" Binding="{Binding Name}" IsReadOnly="True" Width="120"/>
                            <DataGridTextColumn Header="Telefonnummer" Binding="{Binding Phonenumber}" IsReadOnly="True" Width="150"/>
                            <DataGridTextColumn Header="Emailadress" Binding="{Binding Emailaddress}" IsReadOnly="True" Width="150"/>
                            <DataGridTextColumn Header="Adress" Binding="{Binding Address}" IsReadOnly="True" Width="*"/>
                            <DataGridTextColumn Header="Postnummer" Binding="{Binding ZipCode}" IsReadOnly="True" Width="*"/>
                            <DataGridTextColumn Header="Stad" Binding="{Binding City}" IsReadOnly="True" Width="*"/>
                            <DataGridTextColumn Header="Jobbtelefon" Binding="{Binding WorkPhonenumber}" IsReadOnly="True" Width="*"/>
                        </DataGrid.Columns>
                    </DataGrid>

                    <!-- Formulär för att redigera kunduppgifter -->
                    <Grid Margin="0 20 0 0">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="auto"/>
                            <RowDefinition Height="auto"/>
                            <RowDefinition Height="auto"/>
                            <RowDefinition Height="auto"/>
                            <RowDefinition Height="auto"/>
                            <RowDefinition Height="auto"/>
                            <RowDefinition Height="auto"/>
                            <RowDefinition Height="auto"/>
                            <RowDefinition Height="auto"/>
                        </Grid.RowDefinitions>

                        <TextBlock Text="Redigera kunduppgifter" Grid.Row="0" FontSize="20" FontWeight="Bold" Margin="0 10 0 10"/>

                        <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0 5 0 0">
                            <TextBlock Text="Namn:" Width="120" VerticalAlignment="Center" FontWeight="Normal"/>
                            <TextBox Width="300" Text="{Binding NewName, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=True}" BorderBrush="#223A2A"/>
                        </StackPanel>

                        <StackPanel Grid.Row="2" Orientation="Horizontal" Margin="0 5 0 0">
                            <TextBlock Text="Telefonnummer:" Width="120" VerticalAlignment="Center" FontWeight="Normal"/>
                            <TextBox Width="300" Text="{Binding NewPhoneNumber, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=True}" BorderBrush="#223A2A"/>
                        </StackPanel>

                        <StackPanel Grid.Row="3" Orientation="Horizontal" Margin="0 5 0 0">
                            <TextBlock Text="E-postadress:" Width="120" VerticalAlignment="Center" FontWeight="Normal"/>
                            <TextBox Width="300" Text="{Binding NewEmailadress, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=True}" BorderBrush="#223A2A"/>
                        </StackPanel>

                        <StackPanel Grid.Row="4" Orientation="Horizontal" Margin="0 5 0 0">
                            <TextBlock Text="Adress:" Width="120" VerticalAlignment="Center" FontWeight="Normal"/>
                            <TextBox Width="300" Text="{Binding NewAddress, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=True}" BorderBrush="#223A2A"/>
                        </StackPanel>

                        <StackPanel Grid.Row="5" Orientation="Horizontal" Margin="0 5 0 0">
                            <TextBlock Text="Postnummer:" Width="120" VerticalAlignment="Center" FontWeight="Normal"/>
                            <TextBox Width="300" Text="{Binding NewZipcode, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=True}" BorderBrush="#223A2A"/>
                        </StackPanel>

                        <StackPanel Grid.Row="6" Orientation="Horizontal" Margin="0 5 0 0">
                            <TextBlock Text="Stad:" Width="120" VerticalAlignment="Center" FontWeight="Normal"/>
                            <TextBox Width="300" Text="{Binding NewCity, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=True}" BorderBrush="#223A2A"/>
                        </StackPanel>

                        <StackPanel Grid.Row="7" Orientation="Horizontal" Margin="0 5 0 0">
                            <TextBlock Text="Jobbtelefon:" Width="120" VerticalAlignment="Center" FontWeight="Normal"/>
                            <TextBox Width="300" Text="{Binding NewWorkPhoneNumber, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=True}" BorderBrush="#223A2A"/>
                        </StackPanel>

                        <!-- Buttons -->
                        <StackPanel Grid.Row="8" Orientation="Horizontal" HorizontalAlignment="Right" Margin="10">
                            <Button Content="Ångra" Width="100" Margin="5" Background="#223A2A" Foreground="White"/>
                            <Button Content="Avsluta" Width="100" Margin="5" Background="#223A2A" Foreground="White"/>
                            <Button Content="Spara ändringar" Width="150" Margin="5" Background="#223A2A" Foreground="White" Command="{Binding UpdatePcustomersCommand}"/>
                        </StackPanel>
                    </Grid>
                </StackPanel>
            </TabItem>

            <TabItem Header="Företagskunder" FontWeight="Bold" Style="{StaticResource ModernTabItemStyle}">
                <StackPanel Background="White" Width="900">
                   
                    <!-- Filter Textbox -->
                    <Grid Width="400" HorizontalAlignment="Right" Margin="0 0 100 10">
                        <TextBlock Margin="20 0" VerticalAlignment="Center" Foreground="#B0B9C6" IsHitTestVisible="False" Text="Sök här ..."/>
                        <TextBox Name="textBoxPFilter" Style="{StaticResource searchTextbox}" />
                        <material:PackIconMaterial Kind="Magnify" Width="15" Height="15" VerticalAlignment="Center" Margin="0 0 15 0" Foreground="#B0B9C6" HorizontalAlignment="Right"/>
                    </Grid>

                    <!-- DataGrid för att visa företagskunder -->
                    <DataGrid Name="businessDataGrid" AutoGenerateColumns="False" Height="200" ItemsSource="{Binding BCcustomers}">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Namn" Binding="{Binding Name}" IsReadOnly="True" Width="120"/>
                            <DataGridTextColumn Header="Telefonnummer" Binding="{Binding Phonenumber}" IsReadOnly="True" Width="150"/>
                            <DataGridTextColumn Header="Emailadress" Binding="{Binding Emailaddress}" IsReadOnly="True" Width="150"/>
                            <DataGridTextColumn Header="Adress" Binding="{Binding Address}" IsReadOnly="True" Width="*"/>
                            <DataGridTextColumn Header="Postnummer" Binding="{Binding ZipCode}" IsReadOnly="True" Width="*"/>
                            <DataGridTextColumn Header="Stad" Binding="{Binding City}" IsReadOnly="True" Width="*"/>
                            <DataGridTextColumn Header="Företagsnamn" Binding="{Binding CompanyName}" IsReadOnly="True" Width="*"/>
                            <DataGridTextColumn Header="Organisationsnummer" Binding="{Binding Organizationalnumber}" IsReadOnly="True" Width="*"/>
                            <DataGridTextColumn Header="Landskod" Binding="{Binding CountryCode}" IsReadOnly="True" Width="*"/>
                        </DataGrid.Columns>
                    </DataGrid>

                    <!-- Formulär för att redigera kunduppgifter -->
                    <Grid Margin="0 20 0 0">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="auto"/>
                            <RowDefinition Height="auto"/>
                            <RowDefinition Height="auto"/>
                            <RowDefinition Height="auto"/>
                            <RowDefinition Height="auto"/>
                            <RowDefinition Height="auto"/>
                            <RowDefinition Height="auto"/>
                            <RowDefinition Height="auto"/>
                            <RowDefinition Height="auto"/>
                        </Grid.RowDefinitions>

                        <TextBlock Text="Redigera kunduppgifter" Grid.Row="0" FontSize="20" FontWeight="Bold" Margin="0 10 0 10"/>

                        <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0 5 0 0">
                            <TextBlock Text="Namn:" Width="120" VerticalAlignment="Center"/>
                            <TextBox Width="300" Text="{Binding NewName, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=True}" BorderBrush="Black"/>
                        </StackPanel>

                        <StackPanel Grid.Row="2" Orientation="Horizontal" Margin="0 5 0 0">
                            <TextBlock Text="Telefonnummer:" Width="120" VerticalAlignment="Center"/>
                            <TextBox Width="300" Text="{Binding NewPhoneNumber, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=True}" BorderBrush="Black"/>
                        </StackPanel>

                        <StackPanel Grid.Row="3" Orientation="Horizontal" Margin="0 5 0 0">
                            <TextBlock Text="E-postadress:" Width="120" VerticalAlignment="Center"/>
                            <TextBox Width="300" Text="{Binding NewEmailadress, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=True}" BorderBrush="Black"/>
                        </StackPanel>

                        <StackPanel Grid.Row="4" Orientation="Horizontal" Margin="0 5 0 0">
                            <TextBlock Text="Adress:" Width="120" VerticalAlignment="Center"/>
                            <TextBox Width="300" Text="{Binding NewAddress, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=True}" BorderBrush="Black"/>
                        </StackPanel>

                        <StackPanel Grid.Row="5" Orientation="Horizontal" Margin="0 5 0 0">
                            <TextBlock Text="Postnummer:" Width="120" VerticalAlignment="Center"/>
                            <TextBox Width="300" Text="{Binding NewZipcode, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=True}" BorderBrush="Black"/>
                        </StackPanel>

                        <StackPanel Grid.Row="6" Orientation="Horizontal" Margin="0 5 0 0">
                            <TextBlock Text="Stad:" Width="120" VerticalAlignment="Center"/>
                            <TextBox Width="300" Text="{Binding NewCity, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=True}" BorderBrush="Black"/>
                        </StackPanel>

                        <StackPanel Grid.Row="7" Orientation="Horizontal" Margin="0 5 0 0">
                            <TextBlock Text="Företagsnamn:" Width="120" VerticalAlignment="Center"/>
                            <TextBox Width="300" Text="{Binding NewCompanyName, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=True}" BorderBrush="Black"/>
                        </StackPanel>

                        <!-- Buttons -->
                        <StackPanel Grid.Row="8" Orientation="Horizontal" HorizontalAlignment="Right" Margin="10">
                            <Button Content="Ångra" Width="100" Margin="5" Background="#223A2A" Foreground="White"/>
                            <Button Content="Avsluta" Width="100" Margin="5" Background="#223A2A" Foreground="White"/>
                            <Button Content="Spara ändringar" Width="150" Margin="5" Background="#223A2A" Foreground="White" Command="{Binding UpdateBCcustomersCommand}"/>
                        </StackPanel>
                    </Grid>
                </StackPanel>
            </TabItem>
        </TabControl>
    </Grid>
</UserControl>